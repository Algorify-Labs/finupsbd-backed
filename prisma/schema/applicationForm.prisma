model LoanApplication {
  id                   String          @id @default(uuid()) // Unique identifier
  userId               String          // User creating the application
  user                 User            @relation(fields: [userId], references: [id])

  // Personal Information
  fullName             String
  fatherName           String
  motherName           String
  spouseName           String?
  dateOfBirth          DateTime
  placeOfBirth         String
  maritalStatus        MaritalStatus
  gender               AppGender
  nid                  String
  birthRegistration    String?
  mobileNumber         String
  alternateNumber      String?
  emailAddress         String
  socialMediaProfiles  String[]

  // Residential Information
//   permanentAddress     Address         @relation(fields: [permanentAddressId], references: [id])
  permanentAddressId   String
//   currentAddress       Address?        @relation(fields: [currentAddressId], references: [id])
  currentAddressId     String?

  // Employment & Financial Information
  employmentStatus     EmploymentStatus
  jobTitle             String?
  employerName         String?
  department           String?
  officeAddress        String?
  contactDetails       String?
  businessName         String?
  businessRegistration String?
  employmentTenure     Int?
  monthlyGrossIncome   Float
  totalMonthlyExpenses Float
  otherIncomeSources   String?
  taxIdentification    String?
  creditScore          Float?

  // Loan Request Details
  loanType             String
  loanAmountRequested  Float
  loanPurpose          String
  loanTenure           Int
  proposedEMIStartDate DateTime?
  repaymentPreference  String

  // Existing Financial Obligations
//   existingLoans        ExistingLoan[]
//   creditCards          CreditCard[]
//   otherLiabilities     Liability[]
//   coApplicants         CoApplicant[]

  // Document Uploads
  documentUploads      String[]        // URLs for uploaded documents

  // Consent & Declaration
  consentGiven         Boolean         @default(false)
  privacyAgreement     Boolean         @default(false)
  nonDisclosure        Boolean         @default(false)
  declarationAccuracy  Boolean         @default(false)
  digitalSignature     String
  signatureDate        DateTime
  
 // Data Security
  encryptionStandards  Boolean         @default(false)      // Encryption Standards
  twoFactorAuth        Boolean         @default(false)      // Two-Factor Authentication
  roleBasedAccess      Boolean         @default(false)      // Role-Based Access Control
  dataRetentionPolicy  Boolean         @default(false)      // Data Retention Policy
  withdrawalRights     Boolean         @default(false)      // Right to Withdraw or Update
  // Metadata
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
}


model Address {
  id                 String   @id @default(uuid())
  houseFlatNo        String
  streetRoad         String
  areaLocality       String
  city               String
  district           String
  postalCode         String
  ownershipStatus    OwnershipStatus
  lengthOfStayYears  Int
}

model ExistingLoan {
  id              String   @id @default(uuid())
  lenderName      String
  loanBalance     Float
  monthlyEMI      Float
  remainingTenure Int
}

model CreditCard {
  id                    String   @id @default(uuid())
  cardIssuer            String
  currentBalance        Float
  minimumMonthlyPayment Float
}

model Liability {
  id      String   @id @default(uuid())
  type    String
  balance Float
  emi     Float
}

model CoApplicant {
  id              String   @id @default(uuid())
  fullName        String
  relationship    String
  employment      String
  monthlyIncome   Float
}

enum AppGender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum OwnershipStatus {
  OWNED
  RENTED
  LEASED
  OTHER
}

enum EmploymentStatus {
  SALARIED
  SELF_EMPLOYED
  BUSINESS_OWNER
  UNEMPLOYED
}




